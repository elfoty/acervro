generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Livro {
  id Int @id @default(autoincrement())  
  nome String
  autores LivroAutor[]
  ISBN String
  categoria CategoriaLivro[]
  paginas Int
  lancamento DateTime
  usuarioId Int
  capa String
  descricao String
  acervro AcervroLivro[]
}

model Autor {
  id         Int        @id @default(autoincrement())
  nome String
  livros LivroAutor[]
}

model LivroAutor {
  livroId  Int
  autorId  Int

  livro    Livro @relation(fields: [livroId], references: [id], onDelete: Cascade)
  autor    Autor @relation(fields: [autorId], references: [id], onDelete: Cascade)

  @@id([livroId, autorId])
}


model Usuario {
  id         Int        @id @default(autoincrement())
  nome       String
  sobrenome  String
  email      String     @unique
  telefone   String
  senha      String 
  nascimento DateTime
  permissoes Permissao
}

model CategoriaLivro {
  livroId     Int
  categoriaId Int

  livro       Livro     @relation(fields: [livroId], references: [id], onDelete: Cascade)
  categoria   Categoria @relation(fields: [categoriaId], references: [id])

  @@id([livroId, categoriaId])
}

model Acervro {
  id    Int              @id @default(autoincrement())
  livros AcervroLivro[]
  nome  String           @unique
  usuarioId Int
}

model AcervroLivro {
  livroId     Int
  acervroId Int

  livro       Livro     @relation(fields: [livroId], references: [id], onDelete: Cascade)
  acervro   Acervro @relation(fields: [acervroId], references: [id], onDelete: Cascade)

  @@id([livroId, acervroId])
}

model Categoria {
  id    Int              @id @default(autoincrement())
  nome  String           @unique
  livros CategoriaLivro[]
}

enum Permissao{
  COMUM
  ADMIN
  AUTOR
  CURAD
  DESEN
}